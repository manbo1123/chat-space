.main-chat
  .main-chat__group-info
    .main-chat__group-info__title
      .main-chat__group-info__title__name
        = @group.name
      .main-chat__group-info__title__member
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .main-chat__group-info__edit-btn
      = link_to 'Edit',edit_group_path(@group), class:"main-chat__group-info__btn"

  .main-chat__message-list
    = render @messages
  
  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__box
        .main-chat__message-form__box__block
          = f.text_field :content, placeholder:"type a message", class:"main-chat__message-form__text-form"
          = f.label :image, class: "main-chat__message-form__image-icon" do
            = icon('fas', 'image')
            = f.file_field :image, class: "main-chat__message-form__default"
        .main-chat__message-form__box__submit
          = f.submit 'Send', class: "main-chat__message-form__btn"